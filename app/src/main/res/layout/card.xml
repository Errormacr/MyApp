<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/quotesRect"
        android:layout_width="339dp"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/d1"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="top"
        android:lineHeight="34dp"
        android:text="TEst"
        android:textColor="#253334"
        android:textFontWeight="500"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@id/quotesRect"
        app:layout_constraintTop_toTopOf="@id/quotesRect" />

    <TextView
        android:id="@+id/d2"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:gravity="top"
        android:lineHeight="18dp"
        android:text="Кратенькое описание блока с двумя строчками"
        android:textColor="#000000"
        android:textFontWeight="500"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@id/quotesRect"
        app:layout_constraintTop_toBottomOf="@id/d1" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="138dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@id/quotesRect"
        app:layout_constraintStart_toStartOf="@id/quotesRect"
        app:layout_constraintTop_toBottomOf="@+id/d2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_2" />

    <ImageView
        android:id="@+id/d3"
        android:layout_width="129dp"
        android:layout_height="129dp"
        app:layout_constraintBottom_toBottomOf="@+id/quotesRect"
        app:layout_constraintEnd_toEndOf="@+id/quotesRect"
        app:layout_constraintStart_toEndOf="@+id/d2"
        app:layout_constraintTop_toTopOf="@id/quotesRect"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>